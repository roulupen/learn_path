# LearnPath Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Application Settings
VITE_APP_NAME=LearnPath
VITE_APP_VERSION=1.0.0

# Development Settings
VITE_DEBUG=true

# Session Configuration
VITE_SESSION_TIMEOUT_MINUTES=15
VITE_SESSION_WARNING_MINUTES=2

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true

# Feature Flags
VITE_ENABLE_QUESTION_REGENERATION=true
VITE_ENABLE_PROGRESS_ANALYTICS=true
VITE_ENABLE_COURSE_CUSTOMIZATION=true
